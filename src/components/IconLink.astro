---
import { Icon } from "astro-icon/components";

interface Props {
  type: string;
  url: string;
  size_class?: string;
}

const { type, url, size_class = "h-7 w-7" } = Astro.props;

const linkIcons: Record<string, string> = {
  github: "simple-icons:github",
  appstore: "simple-icons:appstore",
  webpage: "lucide:globe",
  document: "lucide:file-text",
  linkedin: "simple-icons:linkedin"
};

const icon =
  linkIcons[type] ?? (console.log(`Unknown link type: ${type}`), "lucide:link");
---

<a href={url} class="responsive" rel="noopener noreferrer" target="_blank">
  <Icon name={icon} class={`${size_class} invert dark:invert-0`} />
</a>
