---
import { Image } from "astro:assets";

const images = import.meta.glob("/src/assets/**/*");

interface Props {
  id?: string;
  src: string;
  alt: string | null;
  class?: string;
  loading?: "lazy" | "eager";
  onclick?: string;
}

const {
  id,
  src,
  alt,
  class: classes,
  loading = "eager",
  onclick
} = Astro.props;

const image =
  images[`/src/assets/${src}`] ??
  Object.entries(images).find(([image]) =>
    image.startsWith(
      `/src/assets/${src.includes("/") ? src.slice(0, src.lastIndexOf("/") + 1) : ""}default.`
    )
  )?.[1];

if (!image) throw new Error(`Image not found: ${src}`);
---

<Image
  id={id}
  src={image()}
  alt={alt}
  class={classes}
  loading={loading}
  onclick={onclick}
/>
