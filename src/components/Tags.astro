---
const { tags } = Astro.props;
---

{
  tags && tags.length > 0 && (
    <div class="flex flex-wrap gap-2">
      {tags.sort().map((tag: string) => (
        <a
          class="responsive tag"
          href={`/explore?tags=${encodeURIComponent(tag)}`}
        >
          {tag}
        </a>
      ))}
    </div>
  )
}
