---
import { Image } from "astro:assets";

import { thumbnail } from "../lib";

const {
  id,
  src,
  alt,
  loading = "lazy",
  fetchpriority = "low",
  class: classes
} = Astro.props;
---

<Image
  id={id}
  src={await thumbnail(src)}
  alt={alt}
  loading={loading}
  fetchpriority={fetchpriority}
  class={`thumbnail ${classes}`}
  data-testid="thumbnail"
/>
