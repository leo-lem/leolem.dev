---
const stations: {
  data: {
    title: string;
    subtitle: string;
    date: Date;
    duration: string;
  };
  body: any;
}[] = Astro.props.stations;
---

<div class="relative flex flex-col gap-10">
  <div class="absolute h-full border sm:left-1/2 sm:-translate-x-1/2"></div>

  {
    stations.map(
      ({ data: { title, subtitle, date, duration }, body }, index) => (
        <div class={`relative ml-5 sm:ml-0 ${index !== 0 && "sm:-mt-20"}`}>
          <div class="absolute -ml-5 top-3 w-3 border sm:ml-0 sm:left-1/2 sm:-translate-x-1/2 sm:top-1/2" />

          <div
            class={`sm:w-1/2 sm:px-5 ${index % 2 === 0 ? "sm:ml-auto sm:text-left" : "sm:mr-auto sm:text-right"}`}
          >
            <h3 class="m-0">{title}</h3>

            <div class="font-semibold mb-4">
              <span class="secondary text-sm">@ {subtitle} |</span>
              <span class="muted text-xs">
                {date.getFullYear()} - {duration}
              </span>
            </div>

            <div class="muted prose prose-sm dark:prose-invert">{body}</div>
          </div>
        </div>
      )
    )
  }
</div>
