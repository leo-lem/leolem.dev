---
import { Image } from "astro:assets";

const { slug } = Astro.props;

const images = Object.entries(
  import.meta.glob("/src/assets/portfolio/**/*", { eager: true })
)
  .filter(([path]) => path.includes(`/portfolio/${slug}/`))
  .sort(([a], [b]) => a.localeCompare(b));
---

<div class="grid grid-cols-2 sm:grid-cols-3 gap-4">
  {
    images.map(([path, mod]: [string, any]) => (
      <div>
        <Image
          src={mod.default}
          alt="Project screenshot"
          class="thumbnail card-elevated responsive card object-contain"
          tabindex="0"
          data-screenshot
        />
      </div>
    ))
  }
</div>

<style>
  .fullscreen {
    position: fixed;
    inset: 0;
    z-index: 50;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: rgba(0, 0, 0, 0.75);
  }

  .fullscreen img {
    max-width: 90%;
    max-height: 90%;
  }
</style>

<script is:inline>
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape")
      document.querySelector(".fullscreen")?.classList.remove("fullscreen");
  });

  document.querySelectorAll("[data-screenshot]").forEach((img) => {
    img.addEventListener("click", function () {
      this.closest("div").classList.toggle("fullscreen");
      this.classList.remove("responsive", "cursor-pointer");
    });
    img.addEventListener("keydown", function (e) {
      if (e.key === "Enter" || e.key === " ") {
        e.preventDefault();
        this.closest("div").classList.toggle("fullscreen");
        this.classList.remove("responsive", "cursor-pointer");
      }
    });
  });
</script>
