---
import "/src/global.tailwind.css";

import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
  description?: string;
  ldJson?: Record<string, unknown>;
}
const { title, description, ldJson } = Astro.props;
const descriptionText = description ?? "Portfolio, blog, and engineering notes";
const ogImage = "/social.png";

const socials = [
  "https://github.com/leo-lem",
  "https://linkedin.com/in/leopoldlemmermann"
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <meta name="description" content={descriptionText} />
    <link rel="canonical" href={`https://leolem.dev${Astro.url.pathname}`} />

    <!-- OpenGraph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={descriptionText} />
    <meta property="og:image" content={ogImage} />
    <meta
      property="og:url"
      content={`https://leolem.dev${Astro.url.pathname}`}
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={descriptionText} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(
        ldJson ?? {
          "@context": "https://schema.org",
          "@type": "Person",
          name: "Leopold Lemmermann",
          email: "mailto:hey@leolem.dev",
          url: "https://leolem.dev",
          sameAs: socials,
          jobTitle: "Software Engineer"
        }
      )}
    />

    <slot name="head" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
  </head>

  <body class="default-color min-w-[360px] flex flex-col min-h-screen">
    <NavBar socials={socials} />

    <main class="flex-1 max-w-3xl mx-auto flex flex-col gap-20 p-10 mb-32">
      {
        description && (
          <section class="text-center px-10">
            <slot name="thumbnail" />
            <h1 class="text-4xl font-bold capitalize mb-5">{title}</h1>
            <p class="secondary max-w-xl mx-auto text-xl">{description}</p>
          </section>
        )
      }

      <slot />
    </main>

    <footer class="mt-12 py-8 text-sm text-center text-muted">
      <a href="/imprint/" class="hover:underline mx-2">Imprint</a> Â·
      <a href="/privacy/" class="hover:underline mx-2">Privacy</a>
    </footer>
  </body>
</html>
