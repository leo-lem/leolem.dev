---
import "/src/global.tailwind.css";

import NavBar from "../components/NavBar.astro";

interface Props {
  title: string;
  description?: string;
  ldJson?: Record<string, unknown>;
  subscribe?: boolean;
}
const { title, description, ldJson, subscribe } = Astro.props;
const descriptionText =
  description ?? "Portfolio, blog, and what I offer as a software engineer.";
const ogImage = "/social.png";

const socials = [
  "https://github.com/leo-lem",
  "https://linkedin.com/in/leopoldlemmermann"
];
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <link rel="canonical" href={`https://leolem.dev${Astro.url.pathname}`} />
    <link rel="manifest" href="/manifest.webmanifest" />

    <meta name="application-name" content="Leopold Lemmermann" />
    <meta name="description" content={descriptionText} />
    <meta
      name="theme-color"
      content="#ffffff"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#1a1c1f"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon-180x180.png"
    />

    <!-- OpenGraph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={descriptionText} />
    <meta property="og:image" content={ogImage} />
    <meta
      property="og:url"
      content={`https://leolem.dev${Astro.url.pathname}`}
    />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={descriptionText} />
    <meta name="twitter:image" content={ogImage} />

    <!-- JSON LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(
        ldJson ?? {
          "@context": "https://schema.org",
          "@type": "Person",
          name: "Leopold Lemmermann",
          email: "mailto:hey@leolem.dev",
          url: "https://leolem.dev",
          sameAs: socials,
          jobTitle: "Software Engineer"
        }
      )}
    />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />

    <!-- OneSignal Web Push SDK -->
    <script is:inline>
      // iOS Safari (and some in-app browsers) may not expose Notification at all.
      // OneSignal’s ES6 SDK references it. Stub it so the SDK can load for email.
      if (
        typeof window !== "undefined" &&
        typeof window.Notification === "undefined"
      ) {
        window.Notification = {
          permission: "denied",
          requestPermission: () => Promise.resolve("denied")
        };
      }
    </script>

    <script
      is:inline
      src="https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.es6.js"
      defer></script>
    <script is:inline>
      window.OneSignalDeferred = window.OneSignalDeferred || [];
      OneSignalDeferred.push(async function (OneSignal) {
        await OneSignal.init({
          appId: "932ddbaa-045a-49d6-80ab-774924450946",
          safari_web_id:
            "web.onesignal.auto.1a94b592-c98a-427e-9490-520bfcd23754",
          allowLocalhostAsSecureOrigin: true,
          autoResubscribe: true,
          promptOptions: {
            slidedown: {
              prompts: [
                {
                  type: "push",
                  autoPrompt: false,
                  text: {
                    actionMessage: "Do you want to be notified?",
                    acceptButton: "Yes",
                    cancelButton: "No Thanks",
                    confirmMessage:
                      "Thanks for subscribing! I'll keep you updated."
                  }
                },
                {
                  type: "email",
                  autoPrompt: false,
                  text: {
                    actionMessage: "Enter your email to subscribe to my blog.",
                    acceptButton: "Subscribe",
                    cancelButton: "No Thanks",
                    confirmMessage:
                      "Thanks for subscribing! I'll keep you updated via email."
                  }
                }
              ]
            }
          }
        });
      });
    </script>
  </head>

  <body class="min-w-[360px] min-h-screen stack">
    <NavBar socials={socials} subscribe={subscribe} />

    <main class="container-wide flex-1 mx-auto stack-lg mb-20">
      {
        description && (
          <section class="stack text-center ">
            <slot name="thumbnail" />
            <h1 class="title-lg capitalize">{title}</h1>
            <p class="summary text-lg line-clamp-none">{description}</p>
          </section>
        )
      }

      <slot />
    </main>

    <footer class="container-narrow text-center mb-10">
      <a href="/imprint/" class="link-muted">Imprint</a>
      ·
      <a href="/privacy/" class="link-muted">Privacy</a>
    </footer>
  </body>
</html>
