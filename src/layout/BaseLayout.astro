---
import "/src/global.tailwind.css";

import NavBar from "../components/NavBar.astro";
import { frontmatter } from "/src/content/about.md";

const {
  title,
  description = frontmatter.caption,
  thumbnail = "/social.png",
  ldJson,
  subscribe,
  showHeader = true
} = Astro.props;

const url = Astro.url;
const thumbnailUrl = new URL(thumbnail, Astro.site).href;
const socials = frontmatter.socials.map((social: any) => social.url);

const appId = import.meta.env.ONESIGNAL_APP_ID;
const safariWebId = import.meta.env.ONESIGNAL_SAFARI_WEB_ID;
const allowLocalhost = import.meta.env.NODE_ENV === "development";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>{title}</title>
    <link rel="canonical" href={url} />
    <link rel="manifest" href="/manifest.webmanifest" />
    {Astro.url.search ? <meta name="robots" content="noindex,follow" /> : null}

    <meta name="application-name" content="Leopold Lemmermann" />
    <meta name="description" content={description} />
    <meta
      name="theme-color"
      content="#f3f4f6"
      media="(prefers-color-scheme: light)"
    />
    <meta
      name="theme-color"
      content="#1a1c1f"
      media="(prefers-color-scheme: dark)"
    />

    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="/apple-touch-icon-180x180.png"
    />

    <!-- OpenGraph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={thumbnailUrl} />
    <meta property="og:url" content={url} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={thumbnailUrl} />
    <meta name="twitter:url" content={url} />

    <!-- JSON LD -->
    <script
      is:inline
      type="application/ld+json"
      set:html={JSON.stringify(
        ldJson ?? {
          "@context": "https://schema.org",
          "@type": "Person",
          name: "Leopold Lemmermann",
          description: description,
          jobTitle: frontmatter.titles.join(", "),
          image: thumbnailUrl,
          email: "mailto:hey@leolem.dev",
          url: url,
          sameAs: socials
        }
      )}
    />

    <!-- OneSignal Web Push SDK -->
    <script is:inline>
      // iOS Safari (and some in-app browsers) may not expose Notification at all.
      // OneSignal’s ES6 SDK references it. Stub it so the SDK can load for email.
      if (
        typeof window !== "undefined" &&
        typeof window.Notification === "undefined"
      ) {
        window.Notification = {
          permission: "denied",
          requestPermission: () => Promise.resolve("denied")
        };
      }
    </script>
    <script
      is:inline
      src="https://cdn.onesignal.com/sdks/web/v16/OneSignalSDK.page.es6.js"
      defer></script>
    <script is:inline define:vars={{ appId, safariWebId, allowLocalhost }}>
      window.OneSignalDeferred = window.OneSignalDeferred || [];
      OneSignalDeferred.push(async function (OneSignal) {
        await OneSignal.init({
          appId: appId,
          safari_web_id: safariWebId,
          allowLocalhostAsSecureOrigin: allowLocalhost,
          autoResubscribe: true
        });
      });
    </script>
  </head>

  <body class="min-w-[360px] min-h-screen stack" data-testid="layout">
    <NavBar socials={socials} subscribe={subscribe} />

    <main
      class="container-wide flex-1 mx-auto stack-lg mb-20"
      data-testid="page"
    >
      {
        showHeader && (
          <section class="stack text-center ">
            <slot name="thumbnail" />
            <h1 class="title-lg capitalize line-clamp-none">{title}</h1>
            <p class="summary text-lg line-clamp-none">{description}</p>
          </section>
        )
      }

      <slot />
    </main>

    <footer class="container-narrow text-center mb-10">
      <a href="/imprint/" class="link-muted">Imprint</a>
      ·
      <a href="/privacy/" class="link-muted">Privacy</a>
    </footer>
  </body>
</html>
