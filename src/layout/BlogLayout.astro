---
import MarkdownLayout from "./MarkdownLayout.astro";
import Tags from "../components/Tags.astro";

const {
  frontmatter: { title, author, date, tags }
} = Astro.props;
---

<MarkdownLayout frontmatter={{ title, author, date, tags }}>
  <article class="text-center">
    <p class="text-muted font-semibold text-sm mb-4">
      by {author ?? "Leopold Lemmermann"} | {
        new Date(date).toLocaleDateString()
      }
    </p>
    <div class="flex flex-col items-center mb-4">
      <Tags tags={tags} />
    </div>
    <hr />

    <div class="prose prose-lg dark:prose-invert text-start sm:text-justify">
      <slot />
    </div>
  </article>
</MarkdownLayout>
